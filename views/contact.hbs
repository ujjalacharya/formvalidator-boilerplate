<h1 class="text-center">Contact Us</h1>
<form class="form-horizontal col-md-6 col-md-offset-3" method="post">

    {{#each errorMessage}}
        <div class="alert alert-danger">
            {{this.msg}}
        </div>    
    {{/each}}


    <div class="form-group">
    <label>Name</label>
      <input type="text" class="form-control" name="name" value="{{name}}" placeholder="Enter name here...">
    </div>
  </div>
  <div class="form-group">
    <label>Email</label>
      <input type="email" class="form-control" name="email" value="{{email}}" placeholder="Enter email here...">
    </div>
  </div>
  <div class="form-group">
      <label>Message</label>
    <textarea class="form-control" name="message" rows="3">{{message}}</textarea>
    </div>
  </div>
 
  <div class="form-group">
    <div>
      <button type="submit" class="btn btn-primary col-md-12">Submit</button>
    </div>
  </div>
</form>